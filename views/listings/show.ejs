<% layout("layouts/boilerplate") -%>
<div class="row justify-content-center">
  <div class="col-8">
    <h3 class="mb-4">Listing Details</h3>

    <div class="card border-0 rounded-4">
      <img src="<%= listing.image.url %>" class="card-img-top show-img rounded-4" alt="<%= listing.title %>">
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          <strong>Price:</strong> â‚¹ <%= listing.price.toLocaleString("en-IN") %><br>
          <strong>Location:</strong> <%= listing.location %>, <%= listing.country %>
        </p>

        <a href="/listings/<%= listing._id %>/edit" class="btn add-btn me-2">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
